{
    "name": "@ng2/animations",
    "version": "1.5.0",
    "description": "Angular2 module storing ready animations",
    "main": "index.js",
    "typings": "index.d.ts",
    "scripts":
    {
        "prebuild": "typings install",
        "build": "npm run tsc",
        "clean": "rimraf ./*.d.ts ./index.js ./index.dev.js ./index.min.js ./*.map ./*.log ./animations",
        "clean:deps": "rimraf ./node_modules ./typings",
        "clean:all": "npm run clean && npm run clean:deps",
        "tsc": "tsc",
        "tsc:w": "tsc -w --sourceMap",
        "tsc:debug": "tsc --sourceMap",
        "prepublish": "npm run bundle:package",
        "postpublish": "npm run clean",
        "republish": "npm publish --force",
        "bundle": "tsc --outFile ./index.dev.js",
        "bundle:update": "nab ./index.dev.js && uglifyjs -o ./index.min.js -- ./index.dev.js",
        "bundle:package": "npm run clean && npm run build && npm run bundle && npm run bundle:update",
        "deploy-stable": "npp -b",
        "deploy-next": "npp -p -b -s \"beta\" -t \"next\""
    },
    "keywords":
    [
        "animations",
        "angular2",
        "ng2"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "dependencies":
    {
        "@angular/core": "~2.0.0",
        "core-js": "~2.4.1",
        "reflect-metadata": "~0.1.3",
        "zone.js": "~0.6.23",
        "rxjs": "5.0.0-beta.12"
    },
    "devDependencies":
    {
        "rimraf": "~2.5.4",
        "typescript": "2.0.2",
        "typings":"~1.3.2",
        "uglify-js": "~2.6.2",
        "npm-publish-pkg": "~1.2.0",
        "npm-angular2-bundle": "~1.0.1"
    }
}