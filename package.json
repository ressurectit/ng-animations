{
    "name": "@anglr/animations",
    "version": "0.0.0-placeholder",
    "description": "Angular module storing ready animations",
    "type": "module",
    "sideEffects": false,
    "scripts": {
        "build": "ngc -p tsconfig.es2020.json && ngc -p tsconfig.es2015.json && api-extractor run --local --verbose -c api-extractor.json",
        "clean": "rimraf temp dist */dist **/tsdoc-metadata.json src/**/*.d.ts src/**/*.d.ts.map ./*.d.ts ./*d.ts.map",
        "clean:duplicates": "rimraf */dist/*/src",
        "clean:deps": "rimraf package-lock.json node_modules",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "version:placeholder": "replace-in-file /\\\"version\\\":\\s\\\".*?\\\"/g \"\\\"version\\\": \\\"0.0.0-placeholder\\\"\" package.json --isRegex",
        "version:git": "ngv -e \"replace-in-file 0.0.0-placeholder $GIT_VERSION package.json && echo $GIT_VERSION > version.bak\"",
        "version:build": "ngv -e \"echo $GIT_VERSION > version.bak\"",
        "prepublishOnly": "npm run bundle && npm run version:placeholder && npm run version:git",
        "postpublish": "npm run doc && npm run version:placeholder && npm run clean",
        "bundle": "npm run clean && npm run build && npm run clean:duplicates",
        "deploy": "npm publish --loglevel error",
        "deploy:next": "npm publish --tag next --loglevel error",
        "lint": "eslint src/**/*.ts",
        "doc": "path-exists docs && npm run doc:generate || echo \"No docs generated!\"",
        "doc:generate": "npm run doc:generate:animations && npm run doc:save",
        "doc:save": "cd docs && git add . && git commit -m \"INT: updated API docs ng-animations\" && git push && cd ..",
        "doc:generate:animations": "rimraf docs/content/api/ng-animations && npm run doc:json:animations && npm run doc:md:animations",
        "doc:json:animations": "api-extractor run --local --verbose -c api-extractor.json",
        "doc:md:animations": "api-documenter markdown -i temp -o docs/content/api/ng-animations && rimraf temp"
    },
    "engines": {
        "node": "^12.20.0 || ^14.15.0 || >=16.10.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ressurectit/ng-animations"
    },
    "keywords": [
        "animations",
        "angular",
        "ng"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ressurectit/ng-animations/issues"
    },
    "homepage": "https://github.com/ressurectit/ng-animations",
    "peerDependencies": {
        "@angular/core": ">=13.0.0",
        "@angular/animations": ">=13.0.0"
    },
    "devDependencies": {
        "@angular/core": "^13.0.0",
        "@angular/animations": "^13.0.0",
        "rxjs": "^6.6.7",
        "@jscrpt/common": "^2.0.2",
        "@types/node": "14.14.31",
        "@angular/compiler-cli": "^13.0.0",
        "@angular/compiler": "^13.0.0",
        "@angular/language-service": "^13.0.0",
        "@microsoft/api-extractor": "7.18.19",
        "@microsoft/api-documenter": "7.13.67",
        "tslib": "2.3.1",
        "eslint": "7.32.0",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "eslint-plugin-ressurectit": "0.1.0",
        "rimraf": "3.0.2",
        "copyfiles": "2.4.1",
        "replace-in-file": "6.3.2",
        "path-exists-cli": "2.0.0",
        "typescript": "4.4.4",
        "npm-git-version": "2.0.0"
    },
    "esm2020": "./dist/es2020/index.js",
    "es2020": "./dist/es2020/index.js",
    "es2015": "./dist/es2015/index.js",
    "module": "./dist/es2015/index.js",
    "typings": "./animations.d.ts",
    "exports": {
        "./package.json": {
            "default": "./package.json"
        },
        ".": {
            "types": "./animations.d.ts",
            "esm2020": "./dist/es2020/index.js",
            "es2020": "./dist/es2020/index.js",
            "es2015": "./dist/es2015/index.js",
            "node": "./dist/es2015/index.js",
            "default": "./dist/es2020/index.js"
        }
    }
}
