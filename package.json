{
    "name": "@anglr/animations",
    "version": "0.0.0-placeholder",
    "description": "Angular module storing ready animations",
    "type": "module",
    "sideEffects": false,
    "scripts": {
        "build": "ngc --declaration --declarationDir . --declarationMap",
        "clean": "rimraf --glob */temp temp es2022 **/tsdoc-metadata.json src/**/*.d.ts src/**/*.d.ts.map */src/**/*.d.ts */src/**/*.d.ts.map ./*.d.ts ./*.d.ts.map */*.d.ts",
        "clean:deps": "rimraf package-lock.json node_modules || echo 'node_modules removed'",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "version:placeholder": "replace-in-file /\\\"version\\\":\\s\\\".*?\\\"/g \"\\\"version\\\": \\\"0.0.0-placeholder\\\"\" package.json",
        "version:git": "ngv -e \"replace-in-file 0.0.0-placeholder $GIT_VERSION package.json && echo $GIT_VERSION > version.bak\"",
        "version:build": "ngv -e \"echo $GIT_VERSION > version.bak\"",
        "prepublishOnly": "npm run bundle && npm run version:placeholder && npm run version:git",
        "postpublish": "npm run doc && npm run version:placeholder && npm run clean",
        "bundle": "npm run clean && npm run build",
        "deploy": "npm publish --loglevel error",
        "deploy:next": "npm publish --tag next --loglevel error",
        "lint": "eslint src/**/*.ts",
        "doc": "path-exists docs && npm run doc:generate || echo \"No docs generated!\"",
        "predoc:generate": "cd docs && git pull && cd ..",
        "postdoc:generate": "npm run doc:save",
        "doc:generate": "npm run doc:generate:animations",
        "doc:save": "cd docs && git add . && git commit -m \"INT: updated API docs ng-animations\" && git push && cd ..",
        "doc:generate:animations": "rimraf docs/content/api/ng-animations && npm run doc:json:animations && npm run doc:md:animations && npm run doc:api:animations",
        "doc:json:animations": "api-extractor run --local --verbose -c api-extractor.json",
        "doc:md:animations": "api-documenter markdown -i temp -o docs/content/api/ng-animations",
        "doc:api:animations": "copyfiles -u 1 temp/animations.api.md docs/content/api/ng-animations && rimraf temp"
    },
    "engines": {
        "node": "^20.19.0 || ^22.12.0 || >=24.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ressurectit/ng-animations"
    },
    "keywords": [
        "animations",
        "angular",
        "ng"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ressurectit/ng-animations/issues"
    },
    "homepage": "https://github.com/ressurectit/ng-animations",
    "dependencies": {
        "@angular/core": ">=20.2.0",
        "@jscrpt/common": ">=7.1.0",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@angular/compiler": "20.2.0",
        "@angular/compiler-cli": "20.2.0",
        "@angular/core": "20.2.0",
        "@angular/language-service": "20.2.0",
        "@jscrpt/common": "7.1.0",
        "@microsoft/api-documenter": "7.26.27",
        "@microsoft/api-extractor": "7.52.8",
        "@stylistic/eslint-plugin": "4.4.0",
        "@types/node": "22.15.29",
        "copyfiles": "2.4.1",
        "eslint": "9.28.0",
        "eslint-plugin-ressurectit": "0.4.0",
        "npm-git-version": "2.0.0",
        "path-exists-cli": "2.0.0",
        "replace-in-file": "8.3.0",
        "rimraf": "6.0.1",
        "rxjs": "7.5.7",
        "tslib": "2.8.1",
        "typescript": "5.9.2",
        "typescript-eslint": "8.33.0"
    },
    "module": "./es2022/src/index.js",
    "typings": "./src/index.d.ts",
    "exports": {
        "./package.json": {
            "default": "./package.json"
        },
        ".": {
            "types": "./src/index.d.ts",
            "esm2022": "./es2022/src/index.js",
            "es2022": "./es2022/src/index.js",
            "node": "./es2022/src/index.js",
            "default": "./es2022/src/index.js"
        }
    }
}
